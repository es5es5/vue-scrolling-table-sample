{
	"name": "vue-scrolling-table-sample",
	"version": "1.0.0",
	"description": "Example app showing the vue-scrolling-table component",
	"author": "richardtallent <richard@tallent.us>",
	"license": "MIT",
	"repository": "https://github.com/richardtallent/vue-scrolling-table-sample",
	"homepage": "https://tallent.us/vue-scrolling-table/",
	"private": false,
	"scripts": {
		"dev": "vite",
		"devs": "vite --https",
		"builddx": "vuedx-typecheck . && vite build",
		"build": "vite build"
	},
	"dependencies": {
		"vue": "^3.0.5",
		"vue-scrolling-table": "^1.0.4"
	},
	"devDependencies": {
		"@typescript-eslint/parser": "^4.15.0",
		"@vitejs/plugin-vue": "^1.1.4",
		"@vue/compiler-sfc": "^3.0.5",
		"@vuedx/typecheck": "^0.4.1",
		"@vuedx/typescript-plugin-vue": "^0.4.1",
		"autoprefixer": "^10.2.4",
		"eslint": "^7.19.0",
		"eslint-config-tabsanity": "^2.0.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-vue": "^7.5.0",
		"postcss": "^8.2.6",
		"prettier": "^2.2.1",
		"stylelint": "^13.9.0",
		"stylelint-config-standard": "^20.0.0",
		"typescript": "^4.1.5",
		"vite": "^2.0.0-beta.67"
	},
	"eslintConfig": {
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/prettier",
			"tabsanity"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"printWidth": 180
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"exclude": [
			"dist"
		],
		"rules": {
			"indentation": "tab",
			"declaration-block-trailing-semicolon": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie < 11",
		"maintained node versions"
	]
}
